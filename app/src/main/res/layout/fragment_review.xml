<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="3dp"
    android:paddingVertical="5dp"
    android:background="#EEEEEE" >

    <TextView
        android:id="@+id/id"
        android:layout_width="35dp"
        android:layout_height="@dimen/fragmentHeight"
        android:layout_marginHorizontal="5dp"
        android:text="ID"
        android:singleLine="true"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceListItem" />

    <ImageView
        android:id="@+id/iconPicture"
        android:layout_width="@dimen/fragmentHeight"
        android:layout_height="@dimen/fragmentHeight"
        android:background="@color/image_borders"
        android:scaleType="center"
        android:padding="@dimen/imagePadding"
        android:src="@drawable/ic_image_black_24dp"
        android:textAppearance="?attr/textAppearanceListItem"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fragmentHeight"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:text="Title"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="1"
        android:textAppearance="?attr/textAppearanceListItem" />

    <LinearLayout
        android:layout_width="@dimen/iconSize"
        android:layout_height="@dimen/fragmentHeight"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="@dimen/textMargin">

        <ImageView
            android:id="@+id/complete"
            android:layout_width="match_parent"
            android:layout_height="@dimen/iconSize"
            android:layout_marginVertical="3dp"
            android:src="@drawable/ic_create_black_24dp"
            />

        <ImageView
            android:id="@+id/sent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/iconSize"
            android:src="@drawable/ic_cloud_off_black_24dp"
            />

    </LinearLayout>
</LinearLayout>
